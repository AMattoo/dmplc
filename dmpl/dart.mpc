project (dart) : using_madara, using_ace, using_boost, using_vrep {
  libout = $(DMPL_ROOT)/dmpl/lib
  sharedname = dart
  
  prebuild += bison -d -osrc/dmplc/daig-parser.cpp src/dmplc/daig-parser.yy
  prebuild += flex -osrc/dmplc/daig-scanner.cpp src/dmplc/daig-scanner.ll

  dynamicflags += MCDA_BUILD_DLL
  
  includes += src
  
  specific(prop:microsoft) {
    includes += $(GNUWIN32_ROOT)/include
    DisableSpecificWarnings += 4065 4273
  }

  Documentation_Files {
    README.txt
    VERSION.txt
  }
  
  Build_Files {
    default.features
    dart.mpc
    dart.mwc
    using_ace.mpb
    using_boost.mpb
    using_madara.mpb
    using_vrep.mpb
  }

  Header_Files {
  }

  Source_Files {
  }
}

project (dmplc) : using_madara, using_ace, using_boost, using_dart {
  exeout = bin
  exename = dmplc
  
  specific(prop:microsoft) {
    includes += $(GNUWIN32_ROOT)/include
    DisableSpecificWarnings += 4065 4273
  }

  Documentation_Files {
    README.txt
    VERSION.txt
    examples/*.mcda
    src/dmplc/daig-parser.yy
    src/dmplc/daig-scanner.ll
  }
  
  Build_Files {
    default.features
    dart.mpc
    dart.mwc
    using_ace.mpb
    using_boost.mpb
    using_madara.mpb
    using_dart.mpb
    using_vrep.mpb
  }

  Header_Files {
    src/dmplc
    src/daig
    src/daig/madara
  }

  Source_Files {
    src/daig
    src/daig/madara
    src/dmplc
    src/dmplc/daig-scanner.cpp
    src/dmplc/daig-parser.cpp
  }
}

